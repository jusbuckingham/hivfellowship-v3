{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["*"]
    },
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    ".next/types/**/*.ts",
    "lib/**/*.{ts,tsx}",
    "data/**/*.json"
  ],
  "exclude": ["node_modules"]
}
